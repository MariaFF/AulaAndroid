<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.maria.armazenamentointerno.MainActivity">

    <Button
        android:id="@+id/main_bloco_notas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bloco de notas"
        android:onClick="abrirBlocoNotas"/>

    <Button
        android:id="@+id/main_casa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Casa"
        android:onClick="abrirBlocoNotas"/>

    <Button
        android:id="@+id/main_trabalho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trabalho"
        android:onClick="abrirBlocoNotas"/>

    <Button
        android:id="@+id/main_compras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compras"
        android:onClick="abrirBlocoNotas"/>


</LinearLayout>
